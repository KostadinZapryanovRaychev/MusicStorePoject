@model IEnumerable<MvcMusicStoreWebProject.Models.Attendance>
@using Microsoft.AspNetCore.Identity
@using MvcMusicStoreWebProject.Data.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <div asp-validation-summary="All">   </div>
            <h2 class="text-primary"> Attandance</h2>
        </div>
    </div>

    <div class="input-group">
        <div class="col-6">  <a asp-area="" asp-controller="Attendance" asp-action="CreateAttendance" class="btn btn-primary">Create Attendance </a> </div>
        <div class="form-outline">
            <input type="text" id="searchTextId" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </button>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table-dark table table-bordered table-striped" style="width:100%" id="tableRepeat">

            <thead>
                <tr>
                    <th>Date</th>
                    <th>Degree</th>
                    <th>Mode</th>
                    <th>Course</th>
                    <th>Groupe</th>
                    <th>Timeframe</th>
                    <th>Type</th>
                    <th>Hours</th>
                    <th>Auditorium</th>
                    <th>Note</th>
                    <th>Programs</th>
                    <th>Discipline</th>
                    <th>Edit</th>
                    <th>Coppy</th>
                    <th>Delete</th>
                    <th>MultiplyRow</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var attendance in Model)
                {
                    <tr class="tableRows">
                        <td width="8%">@attendance.Date</td>
                        <td width="8%">@attendance.Degree</td>
                        <td width="8%">@attendance.Mode</td>
                        <td width="8%">@attendance.Course</td>
                        <td width="8%">@attendance.Groupe</td>
                        <td width="8%">@attendance.Timeframe</td>
                        <td width="8%">@attendance.Type</td>
                        <td width="8%">@attendance.Hours</td>
                        <td width="8%">@attendance.Auditorium</td>
                        <td width="8%">@attendance.Note</td>
                        <td width="8%">@attendance.Programs</td>
                        <td width="12%">@attendance.Discipline</td>
                        <td><a class="btn btn-primary" asp-action="EditAttendance" asp-controller="Attendance" asp-route-AttendanceId="@attendance.Id" role="button">Edit</a></td>
                        <td><a class="btn btn-primary" asp-action="CoppyAttendance" asp-controller="Attendance" asp-route-AttendanceId="@attendance.Id" role="button">Copy</a></td>
                        <td><button class="btn btn-danger deleteAttendance" onclick="confirmAction()" value="@attendance.Id" role="button">Delete </button></td>

                        <td>

                            <form asp-action="MultiplicationByAttendanceId" asp-controller="Attendance" asp-route-AttendanceId="@attendance.Id">
                                <div>
                                    <select name="MultiplicationLength" asp-items="@ViewBag.MySkills" onsubmit="javascript:this.form.submit()">
                                        <option selected disabled> ---SELECT----</option>
                                    </select>
                                </div>
                                <input type="submit" class="btn btn-info w-75" value="Multiply" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-primary" asp-action="Report" asp-controller="Attendance" role="button">Preview</a>
        <a class="btn btn-primary" asp-action="Multiplication" asp-controller="Attendance" role="button">Multiplication</a>
    }
    else
    {
        <p> No Items Created </p>
    }





</div>



   



    <!-- Modal -->
    <div id="deleteMessageModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Server Message</h4>
                </div>
                <div class="modal-body">
                    <p id="message"> </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>



    @section Scripts {

        <script>
            function confirmAction() {
            }

            $(document).ready(function () {
                $(".deleteAttendance").on("click", function (e) {

                    e.preventDefault();

                    let confirmAction = confirm("Are you sure to execute this action?");
                    if (!confirmAction) {
                        alert("Action canceled");
                        return
                    }
                    alert("Action successfully executed");

                    var attendanceId = $(this).val();

                    $.ajax({
                        type: 'POST',
                        url: '/Attendance/DeleteAttendance',
                        data: { AttendanceId: attendanceId },
                        success: function (data) {
                            $("#message").html(data);
                            $("#deleteMessageModal").modal("show");
                        }

                    });

                });

                // като кликна тука и релоадва страницата с тази функция след като deletetnem
                $("#deleteMessageModal").on("hidden.bs.modal", function () {
                    location.reload();
                });

                $("#searchTextId").on("keyup", function () {
                    var searchTextId = $(this).val();
                    if (searchTextId != undefined && searchTextId != "") {
                        console.log(searchTextId);
                        $(".tableRows").hide();
                        $("td:contains(" + searchTextId + ")").parent().show();

                    }
                    else {
                        $(".tableRows").show();
                    }
                });
            });

        </script>
    }
