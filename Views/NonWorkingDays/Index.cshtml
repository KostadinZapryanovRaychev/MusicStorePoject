@model IEnumerable<MvcMusicStoreWebProject.Models.NonWorkingDays>


<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>



<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>    Здравейте г-н Администратор </h1>
            <div asp-validation-summary="All">   </div>
          
        </div>
        <div class="col-6 text-right">  <a asp-area="" asp-controller="NonWorkingDays" asp-action="CreateNonWorkingDays" class="btn btn-primary">Попълване на почиви дни</a> </div>

    </div>

    <div class="input-group">
        <div class="form-outline">
            <input type="text" id="searchTextId" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </button>
    </div>


    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>Holiday</th>
                    <th>SemesterId</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var nonWorkingDays in Model)
                {
                    <tr class="tableRows">
                        <td width="30%">@nonWorkingDays.Holiday</td>
                        <td width="30%">@nonWorkingDays.SemesterId</td>
                        <td><a class="btn btn-primary" asp-action="EditNonWorkingDays" asp-controller="NonWorkingDays" asp-route-NWDId="@nonWorkingDays.Id" role="button">Edit</a></td>
                        <td><button class="btn btn-danger deleteNonWorkingDay" OnClientClick="return confirm('Are you certain you want to delete this item?');" value="@nonWorkingDays.Id" role="button"  >Delete </button></td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Items Created </p>
    }



</div>


<!-- Modal -->
<div id="deleteMessageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Server Message</h4>
            </div>
            <div class="modal-body">
                <p id="message"> </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



@section Scripts {

    <script>

        $(document).ready(function () {
            $(".deleteNonWorkingDay").on("click", function (e) {

                e.preventDefault();

                var nonWorkingDaysId = $(this).val();

                $.ajax({

                    type: 'POST',
                    url: '/NonWorkingDays/DeleteNWD',
                    data: { NWDId: nonWorkingDaysId },
                    success: function (data) {
                        $("#message").html(data);
                        $("#deleteMessageModal").modal("show");
                    }

                });

            });

            // като кликна тука и релоадва страницата с тази функция след като deletetnem
            $("#deleteMessageModal").on("hidden.bs.modal", function () {
                location.reload();
            });

            $("#searchTextId").on("keyup", function () {
                var searchTextId = $(this).val();
                if (searchTextId != undefined && searchTextId != "") {
                    console.log(searchTextId);
                    $(".tableRows").hide();
                    $("td:contains(" + searchTextId + ")").parent().show();

                }
                else {
                    $(".tableRows").show();
                }
            });
        });

    </script>
}