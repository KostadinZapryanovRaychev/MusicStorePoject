@model MvcMusicStoreWebProject.Models.ViewModels.NonWorkingDaysViewModel

<h1>Семестър данни </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="NonWorkingDays" asp-action="EditNonWorkingDays">
    <input type="hidden" asp-for="@Model.NonWorkingDays.Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Моля редактирайте почивните дни</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-1">
                        @*tva e sintaksisa za dostupvane prez ViewModela*@
                        <label asp-for="@Model.NonWorkingDays.Holiday"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="@Model.NonWorkingDays.SemesterId"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-1">
                        <input asp-for="@Model.NonWorkingDays.Holiday" class="form-control" />
                    </div>
                    <div class="col-1">
                        <input asp-for="@Model.NonWorkingDays.SemesterId" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            @*tuk koe pozvolqva da se zapazqt vbazata danni kato cuknesh submit*@
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>