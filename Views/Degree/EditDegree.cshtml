@model MvcMusicStoreWebProject.Models.ViewModels.DegreeViewModel
<!---Blagodarenie na taq prostotie asp action barame metoda ot kontrolera -->
<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h1>Присъствена форма </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="Degree" asp-action="EditDegrees">
    <input type="hidden" asp-for="@Model.Degrees.Id" />
    @*<input type="hidden" asp-for="@Model.Attendance.ApplicationUserId" />*@
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Моля редактирайте</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4" style="display:none;">
                        <label asp-for="@Model.Degrees.Name" style-display="none" visible="false"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="@Model.Degrees.Name" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            @*tuk koe pozvolqva da se zapazqt vbazata danni kato cuknesh submit*@
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>