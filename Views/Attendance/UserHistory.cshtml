@model IEnumerable<MvcMusicStoreWebProject.Models.Attendance>
@using Microsoft.AspNetCore.Identity
@using MvcMusicStoreWebProject.Data.Models



@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">


            <div asp-validation-summary="All">   </div>
            <h2 class="text-primary"> Attandance History</h2>
        </div>


    </div>
    <form action="/Attendance/UserHistory" method="get">
        <div class="col-1">
            <select name="SemesterId" id="ProgramsList" asp-items="@ViewBag.semNames" onchange="javascript:this.form.submit()">
                <option> Select Semester</option>
            </select>
        </div>
    </form>

    <div class="input-group">
        <div class="form-outline">
            <input type="text" id="searchTextId" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </button>
    </div>

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%" id="tableRepeat">

            <thead>
                <tr>
                    <th>Date</th>
                    <th>Degree</th>
                    <th>Mode</th>
                    <th>Course</th>
                    <th>Groupe</th>
                    <th>Timeframe</th>
                    <th>Type</th>
                    <th>Hours</th>
                    <th>Auditorium</th>
                    <th>Note</th>
                    <th>Programs</th>
                    <th>Discipline</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var attendance in Model)
                {
                    <tr class="tableRows">
                        <td width="8%">@attendance.Date</td>
                        <td width="8%">@attendance.Degree</td>
                        <td width="8%">@attendance.Mode</td>
                        <td width="8%">@attendance.Course</td>
                        <td width="8%">@attendance.Groupe</td>
                        <td width="8%">@attendance.Timeframe</td>
                        <td width="8%">@attendance.Type</td>
                        <td width="8%">@attendance.Hours</td>
                        <td width="8%">@attendance.Auditorium</td>
                        <td width="8%">@attendance.Note</td>
                        <td width="8%">@attendance.Programs</td>
                        <td width="12%">@attendance.Discipline</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Items Created </p>
    }





</div>

<div>
    <a class="btn btn-primary" asp-action="Report" asp-controller="Attendance" role="button">Preview</a>
</div>



<!-- Modal -->
<div id="deleteMessageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Server Message</h4>
            </div>
            <div class="modal-body">
                <p id="message"> </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>