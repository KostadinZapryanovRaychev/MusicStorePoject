@model IEnumerable<MvcMusicStoreWebProject.Models.Discipline>

<div class=" container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h1>    Здравейте г-н Администратор </h1>
            <div asp-validation-summary="All">   </div>
            <img src="https://scontent.fsof9-1.fna.fbcdn.net/v/t1.18169-9/17264156_262025210914936_6532510675194426615_n.jpg?_nc_cat=105&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=m5PWsmyf4_gAX-HfT6m&tn=h9kq6mqPTqKii2ia&_nc_ht=scontent.fsof9-1.fna&oh=000d88a4c53d5f2c6654940ddf588cd4&oe=61CD5A02" alt="Alternate Text" width="400" height="400" />
            <h2 class="text-primary"> Attandance</h2>
        </div>
        

    </div>

    <div class="input-group">
        <div class="col-4 text-right">  <a asp-area="" asp-controller="Discipline" asp-action="CreateDiscipline" class="btn btn-primary">Попълване на дисциплини </a> </div>
        <div class="form-outline">
            <input type="text" id="searchTextId" class="form-control" />
        </div>
        <button type="button" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </button>
    </div>

  @*tov mi e za filtera tochno tuka shtot form submitva kum back enda*@  
    <form action="/Discipline" method="get">
        <div class="col-1">
            <select name="ProgramsId" id="ProgramsList" asp-items="@ViewBag.degreesNames" onchange="javascript:this.form.submit()">
                <option> Select Degrees</option>
            </select>
        </div>
        <div class="col-3">
            <input type="submit" class="btn btn-info w-75" value="submit" />
            @*action="./FilteredDisciplines"*@
        </div>
    </form>
    

    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>Name</th>
                    <th>Edit</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var discipline in Model)
                {
                    <tr class="tableRows">
                        <td width="40%">@discipline.Name</td>
                        <td><a class="btn btn-primary" asp-action="EditDiscipline" asp-controller="Discipline" asp-route-DisciplineId="@discipline.Id" role="button">Edit</a></td>
                        <td><button class="btn btn-danger deleteDiscipline" onclick="confirmAction()" value="@discipline.Id" role="button">Delete </button></td>

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No Items Created </p>
    }



</div>


<!-- Modal -->
<div id="deleteMessageModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Server Message</h4>
            </div>
            <div class="modal-body">
                <p id="message"> </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>



@section Scripts {

    <script>
        function confirmAction() {
        }

        $(document).ready(function () {
            $(".deleteDiscipline").on("click", function (e) {

                e.preventDefault();

                let confirmAction = confirm("Are you sure to execute this action?");
                if (!confirmAction) {
                    alert("Action canceled");
                    return
                }
                alert("Action successfully executed");

                var disciplineId = $(this).val();



                $.ajax({

                    type: 'POST',
                    url: '/Discipline/DeleteDiscipline',
                    data: { DisciplineId: disciplineId },
                    success: function (data) {
                        $("#message").html(data);
                        $("#deleteMessageModal").modal("show");
                    }

                });

            });

            // като кликна тука и релоадва страницата с тази функция след като deletetnem
            $("#deleteMessageModal").on("hidden.bs.modal", function () {
                location.reload();
            });

            $("#searchTextId").on("keyup", function () {
                var searchTextId = $(this).val();
                if (searchTextId != undefined && searchTextId != "") {
                    console.log(searchTextId);
                    $(".tableRows").hide();
                    $("td:contains(" + searchTextId + ")").parent().show();

                }
                else {
                    $(".tableRows").show();
                }
            });
        });

    </script>
}