@model MvcMusicStoreWebProject.Models.ViewModels.DisciplineViewModel

<style>
    table {
        font-family: Arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td, th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>

<h1>Семестър данни </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="Discipline" asp-action="EditDiscipline">
    <input type="hidden" asp-for="@Model.Discipline.Id" />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Моля редактирайте</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-1">
                        @*tva e sintaksisa za dostupvane prez ViewModela*@
                        <label asp-for="@Model.Discipline.Name"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="@Model.Discipline.DegreesId"></label>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-1">
                        <input asp-for="@Model.Discipline.Name" class="form-control" />
                    </div>
                    @*<div class="col-1">
                        <input asp-for="@Model.Discipline.DegreesId" class="form-control" />
                    </div>*@
                    <div class="col-1">

                        <select id="ProgramsList" asp-for="@Model.Discipline.DegreesId" asp-items="@ViewBag.degreesNames" class="form-control">
                            <option> Select Semester</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            @*tuk koe pozvolqva da se zapazqt vbazata danni kato cuknesh submit*@
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
