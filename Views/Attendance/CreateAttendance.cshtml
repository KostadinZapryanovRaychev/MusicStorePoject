@model MvcMusicStoreWebProject.Models.ViewModels.AttendanceViewModel
<!---Blagodarenie na taq prostotie asp action barame metoda ot kontrolera -->
@inject MvcMusicStoreWebProject.Data.IAttendanceRepository _Repo;


@*element sus data v koito usera da moje da si izbira data *@

<h1> Присъствена форма </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="Attendance" asp-action="CreateAttendance">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Попълнете присъствието си</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Date"></label>
                        <input asp-for="@Model.Attendance.Date" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Degree"></label>
                        <select id="DegreesList" class="form-control" asp-for="@Model.DegreeId" asp-items="@ViewBag.degreesNames">
                            <option> Select Programs</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Mode"></label>
                        <select asp-for="@Model.Attendance.Mode" asp-items="@Model.AvailableModes" class="form-control">
                            <option selected disabled> ---SELECT----</option>
                        </select>
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Course"></label>
                        <input asp-for="@Model.Attendance.Course" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Groupe"></label>
                        <input asp-for="@Model.Attendance.Groupe" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Timeframe"></label>
                        <input asp-for="@Model.Attendance.Timeframe" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Type"></label>
                        <input asp-for="@Model.Attendance.Type" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Hours"></label>
                        <input asp-for="@Model.Attendance.Hours" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Auditorium"></label>
                        <input asp-for="@Model.Attendance.Auditorium" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Note"></label>
                        <input asp-for="@Model.Attendance.Note" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Programs"></label>
                        <input asp-for="@Model.Attendance.Programs" class="form-control" />
                    </div>
                    <div class="col-3">
                        <label asp-for="@Model.Attendance.Discipline"></label>
                        <select id="DisciplineList" asp-for="@Model.Attendance.Discipline" class="form-control">
                            <option value="-1"> Select Discipline</option>
                        </select>
                    </div>
                    <div class="col-3" style="display:none;">
                        <label asp-for="@Model.Attendance.ApplicationUserId" style-display="none" visible="false"></label>
                    </div>

                    <div class="col-3">
                        <label asp-for="@Model.Attendance.SemesterId"></label>
                        <select id="ProgramsList" asp-for="@Model.Attendance.SemesterId" asp-items="@ViewBag.semNames" class="form-control">
                            <option> Select Semester</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="submit" />
                        </div>
                        <div class="col">
                            <a asp-action="LoggedUser" class="btn btn-danger w-75">Back</a>
                        </div>
                    </div>
                </div>
                <div style="display:none;">
                    <label asp-for="@Model.Attendance.ApplicationUserId" visible="false"> </label>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.11.4/jquery-ui.min.js"></script>



    <script>
        $(document).ready(function () {
            $("#DegreesList").change(function () {
                $("#DisciplineList").empty();
                debugger
                $.ajax({
                    type: "GET",
                    url: "@Url.Action("GetDisciplineByProgramId")",
                    dataType: "json",
                    data: { DegreesId: $("#DegreesList").val() },
                    success: function (disciplines) {
                        $("#DisciplineList").append('<option value"' + -1 + ' " >' + "Select Discipline" + '</option>');
                        $.each(disciplines, function (index , discipline) {
                            $("#DisciplineList").append('<option value"' + discipline.value + ' " >' + discipline.text + '</option>');
                        });
                    },
                    error: function (ex) {
                        alert('Failed to retreive states ' + ex);
                    }
                })
                return false;
            })
        })
    </script>

}