@model MvcMusicStoreWebProject.Models.ViewModels.SemesterViewModel

<h1> Присъствена форма </h1>

<div asp-validation-summary="All">   </div>
<form method="post" asp-controller="Semester" asp-action="CreateSemester">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Попълнете данните за семестър</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-1">
                        <label asp-for="@Model.Semester.Name"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="@Model.Semester.startDate"></label>
                    </div>
                    <div class="col-1">
                        <label asp-for="@Model.Semester.endDate"></label>
                    </div>
                    <div class="form-group row">
                        <div class="col-6">
                            <input asp-for="@Model.Semester.Name" class="form-control" />
                        </div>
                        <div class="col">
                            <div class="form-group row">
                                <div class="col-6">
                                    <input asp-for="@Model.Semester.startDate" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-6">
                                    <input asp-for="@Model.Semester.endDate" class="form-control" />
                                </div>
                            </div>
                            <div class="col">
                                <input type="submit" class="btn btn-info w-75" value="submit" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-danger w-75">Back</a>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
  
</form>